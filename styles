/* --- Basic setup for the whole page --- */
body {
    margin: 0;
    font-family: sans-serif;
    background-color: #f4f4f4; /* Optional: adds a background */
}

/* --- Gallery Container: Use Grid for Consistent Layout --- */
.gallery-container {
    display: grid;
    /* Define a flexible column layout: 2 columns on small screens, 3 or more on larger screens */
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 10px; /* Space between items */
    padding: 10px;
    max-width: 1200px; /* Optional: prevents container from getting too wide on huge screens */
    margin: 0 auto; /* Center the container */
}

/* --- Gallery Item: The wrapper for each image --- */
.gallery-item {
    /* Define a fixed aspect ratio for the container to prevent layout shifts. */
    /* This makes every item look like a square placeholder, regardless of the image inside. */
    /* If you know all portraits are 3:4, you could use padding-bottom: 133.33%; */
    /* For a general gallery, a square (1:1) placeholder works best. */
    position: relative;
    padding-bottom: 100%; /* Creates a 1:1 square aspect ratio based on width */
    overflow: hidden; /* Important: keeps content inside the defined boundary */
}

/* --- Image Styling: Ensure images fit the item boundaries --- */
.gallery-item img {
    position: absolute; /* Allows it to fill the parent .gallery-item */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Key fix: object-fit property */
    /* 'contain' ensures the whole image is visible (will leave letterboxing/gaps) */
    /* 'cover' ensures the item is filled (will crop the image) */
    /* I recommend 'contain' for a gallery where you need to see the whole image: */
    object-fit: contain;
    display: block;
}


/* --- Default Styling (Applied to all screens, especially portrait) --- */

.gallery-container {
    display: flex;
    flex-direction: column;
    align-items: center; /* Centers all items */
    gap: 10px;
    padding: 10px;
}

.gallery-item {
    /* Set a reasonable maximum width for portrait mode / narrow screens */
    max-width: 90%; /* Let it use 90% of the screen width */
    width: 100%; 
    box-sizing: border-box;
}

.gallery-item img {
    display: block; 
    width: 100%; /* Image scales to the width of its parent (.gallery-item) */
    height: auto;
}

/* --- Media Query for Landscape / Wider Screens --- */
/* This targets screens that are wider than they are tall, common in phone landscape mode. */
@media screen and (orientation: landscape) and (max-width: 1000px) {
    
    .gallery-item {
        /* Increase the maximum width for the portrait images in landscape mode. */
        /* Change this value to adjust the gap. 80% is a good starting point. */
        max-width: 80%; 
    }

    /* Optional: If you want the FIRST landscape image (001.jpg) to still span wider */
    .gallery-item:first-child { 
        max-width: 95%; /* Make the initial landscape item almost fill the screen */
    }
}

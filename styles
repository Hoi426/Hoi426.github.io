/* 1. Global Reset */
body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    overflow-x: hidden; /* **Crucial:** Prevents horizontal scrolling caused by elements exceeding the viewport */
    background-color: #f4f4f4;
}

/* 2. Header Style */
header {
    width: 100%;
    text-align: center;
    padding: 20px 0;
}

/* 3. Main Container: Keep centered and constrained */
.gallery-container {
    display: flex;
    flex-direction: column;
    align-items: center; /* **Centers** all items horizontally */
    width: 100%; /* Ensures the container itself spans the full width */
    max-width: 100vw; /* **Critical** constraint: Never let it be wider than the viewport width */
    padding: 0 5px; /* Add slight padding on the sides */
    box-sizing: border-box;
}

/* 4. Gallery Item: The wrapper for each image */
.gallery-item {
    width: 95%; /* Make every item use 95% of the container width by default */
    max-width: 800px; /* Optional: Sets a max size for huge desktop screens */
    margin-bottom: 10px; /* Space between images */
}

/* 5. Image Scaling */
.gallery-item img {
    display: block;
    width: 100%; /* Image fills its parent (.gallery-item) */
    height: auto; /* Maintains aspect ratio */
}

/* 6. Landscape Image Override */
.gallery-item img.is-landscape {
    /* No special width needed here; the general rules already make it take up 95% of the screen. */
}

/* 7. Media Query for Extremely Wide Landscape Modes (e.g., tablet) */
@media screen and (min-width: 800px) and (orientation: landscape) {
    /* On wider screens, you might want the portrait images to be slightly less wide 
       to prevent them from looking excessively large, but still centered. */
    .gallery-item {
        max-width: 700px; /* Constrain the width slightly more */
    }
}
